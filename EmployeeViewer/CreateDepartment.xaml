<Window x:Class="EmployeeViewer.CreateDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeViewer"
        mc:Ignorable="d"
        Title="CreateDepartment" Height="200" Width="350">
    <Grid>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="30" Margin="72,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="New Department" VerticalAlignment="Top" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,56,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top" FontSize="18" Height="30"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="77,115,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Add"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="185,115,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Close"/>

    </Grid>
</Window>
