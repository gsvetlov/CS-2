<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeViewer"
        xmlns:Controls="clr-namespace:EmployeeViewer.Controls;assembly=EmployeeViewer.Controls" x:Class="EmployeeViewer.MainWindow"
        mc:Ignorable="d"
        Title="Employee Viewer" Height="450" Width="800">
    <Grid>
        <ListView x:Name="lvEmployees" HorizontalAlignment="Left" Margin="10,10,0,10" Width="317" SelectionMode="Single" SelectionChanged="LvEmployees_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Employee" Width="Auto" DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Header="Department" Width="Auto" DisplayMemberBinding="{Binding Department}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Controls:EmployeeInfo x:Name="ctrEmployeeInfo" HorizontalAlignment="Right" Margin="0,10,10,0" Width="450" Height ="260" VerticalAlignment="Top"/>
        <Button x:Name="btnUpdate" Content="Update" Margin="0,250,42,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="BtnUpdate_Click"/>

    </Grid>
</Window>
